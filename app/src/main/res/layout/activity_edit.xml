<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditActivity"
    android:background="#5DA7DB">

    <EditText
        android:id="@+id/EtIdbrg"
        android:layout_width="377dp"
        android:layout_height="66dp"
        android:layout_marginTop="16dp"
        android:hint="ID BARANG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:ems="10"/>

    <EditText
        android:id="@+id/EtNamabrg"
        android:layout_width="377dp"
        android:layout_height="66dp"
        android:layout_marginTop="108dp"
        android:ems="10"
        android:hint="NAMA BARANG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EtHargabrg"
        android:layout_width="377dp"
        android:layout_height="66dp"
        android:layout_marginTop="204dp"
        android:ems="10"
        android:hint="HARGA BARANG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/EtStokbrg"
        android:layout_width="377dp"
        android:layout_height="66dp"
        android:layout_marginTop="296dp"
        android:ems="10"
        android:hint="STOK BARANG"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.529"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="182dp"
        android:layout_height="57dp"
        android:layout_marginTop="108dp"
        android:text="SIMPAN"
        android:backgroundTint="#5F6F94"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EtStokbrg" />

    <Button
        android:id="@+id/btnupdate"
        android:layout_width="182dp"
        android:layout_height="57dp"
        android:layout_marginTop="224dp"
        android:text="UPDATE"
        android:backgroundTint="#5F6F94"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EtStokbrg" />

</androidx.constraintlayout.widget.ConstraintLayout>